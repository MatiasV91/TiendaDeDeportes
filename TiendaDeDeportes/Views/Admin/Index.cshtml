@model IEnumerable<TiendaDeDeportes.Dominio.Entities.Producto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Todos los Productos</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">ID</th>
                <th>Nombre</th>
                <th class="text-right">Precio</th>
                <th class="text-center">Acciones</th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ProductoId</td>
                    <td>@Html.ActionLink(item.Nombre, "Edit", new { item.ProductoId })</td>
                    <td class="text-right">@item.Precio.ToString("c")</td>
                    <td class="text-center">
                        @using(Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductoId", item.ProductoId)
                            <input type="submit" class="btn btn-default btn-xs" value="Eliminar" />
                        }
                    </td>
                </tr>
            }
        </table>
        <div class="panel-footer">
            @Html.ActionLink("Agregar un Producto", "Create", null,new { @class = "btn btn-default"})
        </div>
    </div>
</div>